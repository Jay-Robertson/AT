@model Mavo.Assets.Models.ViewModel.EditJobPostModel
@using Mavo.Assets;
<div class="tab-pane @(null == Model ? "active" : "")" id="details">
    @using (Html.BeginForm(MVC.Job.Edit(), FormMethod.Post, new { @class = "form-horizontal" }))
    {
        if (Model == null && Request["templateId"] != null)
        {
        @Html.Hidden("TemplateId", Request["templateId"])
        }
        @Html.HiddenFor(x => x.Id)
        if (null == Model)
        {
        @Html.Hidden("Status", Mavo.Assets.Models.JobStatus.New)
        }
        else
        {
        @Html.HiddenFor(x => x.Status)
        }
        <div class="row-fluid">
            <div class="span6">
                <div class="well">
                    <h4>Job Details</h4>
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.Name)
                        <div class="controls">
                            @Html.EditorFor(x => x.Name)
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.JobContact)
                        <div class="controls">
                            @Html.EditorFor(x => x.JobContact)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.JobContactPhone)
                        <div class="controls">
                            @Html.EditorFor(x => x.JobContact)
                        </div>
                    </div>
                    @Html.EditorFor(x => x.Address)
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.JobNumber)
                        <div class="controls">
                            @Html.EditorFor(x => x.JobNumber)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.ProjectManagerId)
                        <div class="controls">
                            @Html.DropDownList("ProjectManagerId", ((IList<Mavo.Assets.Models.User>)ViewBag.ProjectManagers).Select(x => new SelectListItem()
                           {
                               Value = x.Id.ToString(),
                               Text = String.Format("{0}, {1}", x.LastName, x.FirstName)
                               ,
                               Selected = Model == null || Model.ProjectManagerId == null ? false : x.Id == Model.ProjectManagerId
                           }), string.Empty)
                            <a class="btn btn-small btn-success" href="#addProjectManagerModal" data-toggle="modal"><i class="icon-plus icon-white"></i></a>
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.ScopeOfWork)
                        <div class="controls">
                            @Html.TextAreaFor(x => x.ScopeOfWork)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.Notifiable)
                        <div class="controls">
                            @Html.EnumDropDownListFor(x => x.Notifiable)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.BillingType)
                        <div class="controls">
                            @Html.EnumDropDownListFor(x => x.BillingType)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.SupervisorsNeeded)
                        <div class="controls">
                            @Html.EditorFor(x => x.SupervisorsNeeded)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.WorkersNeeded)
                        <div class="controls">
                            @Html.EditorFor(x => x.WorkersNeeded)
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.ShiftStartDate)
                        <div class="controls">
                            @Html.EditorFor(x => x.ShiftStartDate)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.ShiftHours)
                        <div class="controls">
                            @Html.EditorFor(x => x.ShiftHours)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.PickupTime)
                        <div class="controls">
                            @Html.EditorFor(x => x.PickupTime)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.EstimatedCompletionDate)
                        <div class="controls">
                            @Html.EditorFor(x => x.EstimatedCompletionDate)
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.ForemanNote)
                        <div class="controls">
                            @Html.TextAreaFor(x => x.ForemanNote)
                        </div>
                    </div>
                    @if (Model != null)
                    {
                        <div class="control-group">
                            @Html.LabelTitleizeFor(x => x.Status)
                            <div class="controls" id="status">
                                @Html.DisplayFor(model => model.Status)
                            </div>
                        </div>
                    }
                </div>
                <div class="well">
                    <h4>Contract/Billing</h4>
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.ContractNumber)
                        <div class="controls">
                            @Html.EditorFor(x => x.ContractNumber)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.ContractDate)
                        <div class="controls">
                            @Html.EditorFor(x => x.ContractDate)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.ContractAmount)
                        <div class="controls">
                            @Html.EditorFor(x => x.ContractAmount)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Send Consultant</label>
                        <div class="controls">
                            @Html.EnumCheckBoxListFor(x => x.InvoiceDetail.SendConsultant)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Send Customer</label>
                        <div class="controls">
                            @Html.EnumCheckBoxListFor(x => x.InvoiceDetail.SendCustomer)
                        </div>
                    </div>
                </div>
            </div>
            <div class="span6">
                <div class="well ">
                    <h4>Consultant</h4>
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.ConsultantName)
                        <div class="controls">
                            @Html.EditorFor(x => x.ConsultantName)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.ConsultantContact)
                        <div class="controls">
                            @Html.EditorFor(x => x.ConsultantContact)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.ConsultantContactNumber)
                        <div class="controls">
                            @Html.EditorFor(x => x.ConsultantContactNumber)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.ConsultantEmail)
                        <div class="controls">
                            @Html.EditorFor(x => x.ConsultantEmail)
                        </div>
                    </div>
                    
                    @Html.EditorFor(x => x.InvoiceDetail.Consultant)
                    
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.InvoiceDetail.Attention)
                        <div class="controls">
                            @Html.EditorFor(x => x.InvoiceDetail.Attention)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.InvoiceDetail.InvoiceInstructions)
                        <div class="controls">
                            @Html.EditorFor(x => x.InvoiceDetail.InvoiceInstructions)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.SendFinalReportTo)
                        <div class="controls">
                            @Html.EditorFor(x => x.SendFinalReportTo)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelTitleizeFor(x => x.FinalReportPhoneNumber)
                        <div class="controls">
                            @Html.EditorFor(x => x.FinalReportPhoneNumber)
                        </div>
                    </div>

                </div>
                <div class="well">
                    <h4>Customer Information</h4>
                    <div class="control-group">
                        <label class="control-label" for="Customer">Customer:</label>
                        <div class="controls">
                            @Html.DropDownList("CustomerId", ((IList<Mavo.Assets.Models.Customer>)ViewBag.Customers).Select(x => new SelectListItem()
                           {
                               Value = x.Id.ToString(),
                               Text = x.Name,
                               Selected = Model == null || Model.CustomerId == null ? false : x.Id == Model.CustomerId
                           }), string.Empty)
                            <a class="btn btn-small btn-success" href="#addCustomerModal" data-toggle="modal"><i class="icon-plus icon-white"></i></a>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Customer Address</label>
                        <div class="controls" id="customerAddress">
                            @if (Model != null && Model.Customer != null)
                            {
                                @Html.DisplayFor(x => x.Customer.Address)
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="form-actions">
                <input type="submit" id="btnSubmit" class="btn btn-primary" />
            </div>
        </div>
    }
</div>
