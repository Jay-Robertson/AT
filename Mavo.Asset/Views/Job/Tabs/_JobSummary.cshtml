@model Mavo.Assets.Models.ViewModel.EditJobPostModel
@using Mavo.Assets;
@if (null != Model && Model.Id.HasValue)
{
    <div class="tab-pane" id="jobSummary">
        <div class="row-fluid">
            <div class="span12 well">
                <h4>@Model.Name Summary</h4>
                <a class="btn pull-right" href="#" onclick="window.print()"><i class="icon-print"></i>&nbsp;Print</a>
                @using (Html.BeginForm(MVC.Job.SaveSummary(Model.Id.Value, null)))
                {
                    <table class="table table-condensed table-striped table-hover">
                         <tr>
                            <th>@Html.DisplayNameTitleizedFor(x=>x.Name):</th>
                            <td>@Html.DisplayFor(x => x.Name) @Html.DisplayFor(x=>x.Status)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameTitleizedFor(x=>x.SubmittedBy):</th>
                            <td>@Html.DisplayFor(x => x.SubmittedBy.FullName)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameTitleizedFor(x=>x.Summary.FilledOutBy):</th>
                            <td>
                                @Html.EditorFor(x => x.Summary.FilledOutBy)
                            </td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameTitleizedFor(x=>x.ScopeOfWork):</th>
                            <td>
                                @Html.DisplayFor(x => x.ScopeOfWork)
                            </td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameTitleizedFor(x=>x.Notifiable):</th>
                            <td>@Html.DisplayFor(x => x.Notifiable)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameTitleizedFor(x=>x.JobContact):</th>
                            <td>@Html.DisplayFor(x => x.JobContact)</td>
                        </tr>
                          <tr>
                            <th>@Html.DisplayNameTitleizedFor(x=>x.JobContactPhone):</th>
                            <td>@Html.DisplayFor(x => x.JobContactPhone)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameTitleizedFor(x=>x.JobNumber):</th>
                            <td>@Html.DisplayFor(x => x.JobNumber)</td>
                        </tr>
                         <tr>
                            <th>@Html.DisplayNameTitleizedFor(x=>x.ProjectManager):</th>
                            <td>@Html.DisplayFor(x => x.ProjectManager)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameTitleizedFor(x=>x.ContractDate):</th>
                            <td>@Html.DisplayFor(x => x.ContractDate)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameTitleizedFor(x => x.EstimatedCompletionDate):</th>
                            <td>@Html.DisplayFor(x => x.EstimatedCompletionDate)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameTitleizedFor(x => x.Address):</th>
                            <td>
                                @Html.DisplayFor(x => x.Address)
                            </td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameTitleizedFor(x => x.BillingType):</th>
                            <td>@Html.DisplayFor(x => x.BillingType)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameTitleizedFor(x => x.Summary.ShiftHours):</th>
                            <td>
                                @Html.EditorFor(x => x.Summary.ShiftHours)
                            </td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameTitleizedFor(x => x.ShiftStartDate):</th>
                            <td>@Html.DisplayFor(x => x.ShiftStartDate)</td>
                        </tr>
                         <tr>
                            <th>@Html.DisplayNameTitleizedFor(x => x.PickupTime):</th>
                            <td>@Html.DisplayFor(x => x.PickupTime)</td>
                        </tr>
                        <tr>
                            <th>Foreman:</th>
                            <td>
                                @Html.DropDownList("ForemanId", ((IList<Mavo.Assets.Models.User>)ViewBag.Foremen).Select(x => new SelectListItem()
                           {
                               Value = x.Id.ToString(),
                               Text = String.Format("{0}, {1}", x.LastName, x.FirstName),
                               Selected = Model == null || Model.ForemanId == null ? false : x.Id == Model.ForemanId
                           }), string.Empty)
                                <a class="btn btn-small btn-success" href="#addForemanModal" data-toggle="modal"><i class="icon-plus icon-white"></i></a>
                            </td>
                        </tr>
                          <tr>
                            <th>@Html.DisplayNameTitleizedFor(x => x.ForemanNote):</th>
                            <td>
                                @Html.DisplayFor(x => x.ForemanNote)
                            </td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameTitleizedFor(x => x.SupervisorsNeeded):</th>
                            <td>
                                @Html.DisplayFor(x => x.SupervisorsNeeded)
                            </td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameTitleizedFor(x => x.WorkersNeeded):</th>
                            <td>
                                @Html.DisplayFor(x => x.WorkersNeeded)
                            </td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameTitleizedFor(x => x.Summary.Comments):</th>
                            <td>
                                @Html.TextAreaFor(x => x.Summary.Comments, new { style = "width: 518px; height: 84px" })
                            </td>
                        </tr>
                        <tr class="noprint">
                            <th></th>
                            <td>
                                <input type="submit" class="btn btn-success" value="Save" />
                            </td>
                        </tr>
                    </table>
                }
            </div>
        </div>
        <div id="map" style="width: 640px; height: 480px;"></div>
        <table id="steps" class="table table-condensed table-striped table-hover">
        </table>
    </div>
}
