@model Mavo.Assets.Models.Job
<div class="modal hide fade" id="pickupModal@(Model.Id)">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Mark @Model.Name ready for pickup?</h3>
    </div>
    <div class="modal-body">
        <p>You are scheduling this job for pickup on <strong>@Model.PickupTime.ToLongDateString()</strong>.  </p>
        <p>Are you sure?</p>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn btn-danger" data-dismiss="modal"><i class="icon-remove-circle icon-white"></i>&nbsp;No</a>
        @using (Html.BeginForm(MVC.Job.MarkReadyToPick(Model.Id), FormMethod.Post, new { style = "margin: 0; display: inline;" }))
        {
            <button type="submit" id="btnPickYes" class="btn btn-success"><i class="icon-ok-sign icon-white"></i>&nbsp;Yes</button>
        }
    </div>
</div>
