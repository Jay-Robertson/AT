@model IEnumerable<Mavo.Assets.Models.ViewModel.AssetsWithoutReturn>

@{
    ViewBag.Title = "Red Tagged Items";
}

<h2>Red Tagged Items</h2>
@using (Html.BeginForm())
{
    <div>
        <span class="input-prepend">
            <span class="add-on"><i class="icon-calendar"></i></span>
            @Html.TextBox("startDate", null, new { @class = "text date" })
        </span>
        <span>-</span>
        <span class="input-prepend">
            <span class="add-on"><i class="icon-calendar"></i></span>
            @Html.TextBox("endDate", null, new { @class = "text date" })
        </span>
    </div>
    <input type="submit" value="filter" />
}
<table class="table table-striped table-hover">
    <tr>
        <th>
            Mavo Item Number
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Asset)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Barcode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantityLost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Job)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnedBy)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MavoItemNumber</td>
            <td>
                <a href="/asset/edit/@(item.Id)">@Html.DisplayFor(modelItem => item.Asset)</a>
            </td>
            <td>
                @if (item.AssetItemId.HasValue)
                {
                    <a href="/Asset/Scan/@item.AssetItemId"><i class="icon-barcode"></i> @Html.DisplayFor(modelItem => item.Barcode)</a>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityLost)
            </td>
            <td>
                <a href="/job/edit/@(item.jobId)">@Html.DisplayFor(modelItem => item.Job)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnedBy)
            </td>
        </tr>
    }
</table>
