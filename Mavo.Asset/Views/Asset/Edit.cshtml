@model Mavo.Assets.Models.Asset
@{
    if (Model != null)
    {
        ViewBag.Title = "Edit :: " + Model.Name;
    }
    else
    {
        ViewBag.Title = "Create :: Asset";
    }
}
@section LeftNav
{
    @{Html.RenderPartial(MVC.Asset.Views._AssetSidebar, new Mavo.Assets.Models.ViewModel.AssetsLeftNavViewModel() { Asset = Model, Assets = ViewBag.Assets });}
}
@using (Html.BeginForm(MVC.Asset.Edit(), FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(x => x.Id)
    <fieldset>
        <div class="well">
            <legend>Asset Details</legend>
            <div class="control-group">
                @Html.LabelFor(x => x.Name, new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(x => x.Name)
                </div>
            </div>

            <div class="control-group">
                @Html.LabelFor(x => x.Barcode, new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(x => x.Barcode)
                </div>
            </div>


            <div class="control-group">
                @Html.LabelFor(x => x.Category, new { @class = "control-label" })
                <div class="controls">
                    @Html.DropDownList("CategoryId", ((IList<Mavo.Assets.Models.AssetCategory>)ViewBag.AssetCategories).Select(x => new SelectListItem()
                   {
                       Value = x.Id.ToString(),
                       Text = x.Name,
                       Selected = Model == null || Model.Category == null ? false : x.Id == Model.Category.Id
                   }), string.Empty)
                </div>
            </div>
        </div>
    </fieldset> 
    
    <div class="well">
        <fieldset>
            <legend>Warehousing Data</legend>
            <div class="control-group">
                @Html.LabelFor(x => x.Kind, new { @class = "control-label" })
                <div class="controls">
                    @Html.DropDownListFor(model => model.Kind, new SelectList(Enum.GetValues(typeof(Mavo.Assets.Models.AssetKind))))
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(x => x.Inventory, new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(x => x.Inventory)
                </div>
            </div>
        </fieldset>
    </div>
    <div class="well">
        <fieldset>
            <legend>Manufactuer, Model and Vendor data</legend>


            <div class="control-group">
                @Html.LabelFor(x => x.Manufacturer, new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(x => x.Manufacturer)
                </div>
            </div>

            <div class="control-group">
                @Html.LabelFor(x => x.ModelNumber, new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(x => x.ModelNumber)
                </div>
            </div>

            <div class="control-group">
                @Html.LabelFor(x => x.UPC, new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(x => x.UPC)
                </div>
            </div>
        </fieldset>
    </div>
   
         
    if (ViewBag.AssetItems != null)
    {
    <div class="well">
        <fieldset>
            <legend>Associated Asset Items</legend>
            <table class="table table-striped table-hover">
                <thead>
                    <th>Barcode</th>
                    <th>Condtion</th>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Barcode</td>
                            <td>@item.Condition</td>
                        </tr>
                    }
                </tbody>
            </table>
        </fieldset>
    </div>
    }
    <div class="row-fluid">
        <div class="form-actions">
            <input type="submit" class="btn btn-primary" />
        </div>
    </div>
}


