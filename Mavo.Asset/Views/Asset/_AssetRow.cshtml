@model Mavo.Assets.Models.AssetWithQuantity
<tr id="row-@Model.Id">
    <td>@Model.Asset.Name
        @Html.HiddenFor(model => Model.Asset.Id)

    </td>
    <td>
        <input id="quantity@(Model.Id)" class="input-mini quantity" data-asset-id="@Model.Id" type="text" value="@Model.Quantity" placeholder="quantity" />
        @if (Model.Asset.Kind != Mavo.Assets.Models.AssetKind.Serialized && !String.IsNullOrEmpty(Model.Asset.UnitOfMeasure))
        {
            <span>@Model.Asset.UnitOfMeasure</span>
        }
    </td>
    <td>
        <a href="#" onclick="removeRow(@Model.Id); return false;" class="remove">Remove</a> |<a href="#" onclick="updateQuantity(@Model.Id, $('#quantity@(Model.Id)').val()); return false;">Update</a>
    </td>
</tr>
